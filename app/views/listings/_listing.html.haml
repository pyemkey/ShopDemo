%tr
  %td= image_tag listing.listing_image.url(:thumb)
  %td= listing.name
  %td= listing.description
  %td= listing.price
  %td
    .btn-group
      %button.btn.btn-primary.dropdown-toggle{type: "button", 'data-toggle'=> "dropdown"} 
        Action
        %span.caret
      %ul.dropdown-menu{role: "menu"}
        %li= link_to "View", listing
        %li= link_to "Edit", edit_listing_path(listing)
        %li= link_to "Destroy", listing, method: :delete, confirm: "Are you sure?"