=image_tag asset_path("rsz_handcrafted.jpg"), class: "img-thumbnail"
#items
  - @listings.each do |listing|
    .item
      = link_to(image_tag(listing.medium_image), listing)
      %p
        %span= listing.name
      %p= number_to_currency listing.price
      %p= "Sold by #{listing.user.name}"

.row
- if user_signed_in?
  = link_to "New listing", new_listing_path